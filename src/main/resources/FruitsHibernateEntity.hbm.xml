<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.demo.model.FruitsHibernateEntity" table="fruits" schema="myschema" catalog="mydb">
        <property name="name">
            <column name="name" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="calories">
            <column name="calories" sql-type="integer"/>
        </property>
        <property name="sugar">
            <column name="sugar" sql-type="integer"/>
        </property>
    </class>
</hibernate-mapping>